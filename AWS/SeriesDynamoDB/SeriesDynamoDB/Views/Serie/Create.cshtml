@model SeriesDynamoDB.Models.Serie

@{
    ViewData["Title"] = "Agregar Nueva Serie";
}

<div class="card border-0 shadow-sm rounded-4 p-4" style="background-color: #eef1f6; max-width: 500px; margin: 0 auto;">
    <h2 class="text-secondary fw-semibold mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="mb-4">
            <label asp-for="Titulo" class="form-label text-secondary">Título</label>
            <input asp-for="Titulo" class="form-control form-control-lg border-0 rounded-3" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Genero" class="form-label text-secondary">Género</label>
            <input asp-for="Genero" class="form-control form-control-lg border-0 rounded-3" />
            <span asp-validation-for="Genero" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Temporadas" class="form-label text-secondary">Temporadas</label>
            <input asp-for="Temporadas" class="form-control form-control-lg border-0 rounded-3" type="number" min="1" />
            <span asp-validation-for="Temporadas" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DisponibleEn" class="form-label text-secondary">Disponible en</label>
            <input asp-for="DisponibleEn" class="form-control form-control-lg border-0 rounded-3" placeholder="Ej: Netflix, Prime Video..." />
            <span asp-validation-for="DisponibleEn" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <!-- Botón de guardar con un color más suave -->
            <button type="submit" class="btn btn-outline-primary btn-lg px-4">Guardar</button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Cancelar</a>
        </div>
    </form>
</div>
