@model SeriesDynamoDB.Models.Serie

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<div class="card border-0 shadow-sm rounded-4 p-4" style="background-color: #f9f9f9; max-width: 600px; margin: 0 auto;">
    <h2 class="text-danger fw-semibold mb-4">@ViewData["Title"]</h2>

    <div class="alert alert-warning" role="alert">
        <h5 class="alert-heading text-dark">¡Atención!</h5>
        <p>Estás a punto de eliminar la serie "<strong>@Model.Titulo</strong>". Esta acción no se puede deshacer.</p>
    </div>

    <div class="mb-4">
        <h5 class="text-muted">Detalles de la Serie</h5>
        <dl class="row">
            <dt class="col-sm-3">Género</dt>
            <dd class="col-sm-9">@Model.Genero</dd>

            <dt class="col-sm-3">Temporadas</dt>
            <dd class="col-sm-9">@Model.Temporadas</dd>

            <dt class="col-sm-3">Disponible en</dt>
            <dd class="col-sm-9">@Model.DisponibleEn</dd>
        </dl>
    </div>

    <div class="d-flex justify-content-between">
        <!-- Botón de confirmación de eliminación con un color llamativo -->
        <button type="submit" class="btn btn-danger btn-lg px-4">Eliminar</button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Cancelar</a>
    </div>
</div>
