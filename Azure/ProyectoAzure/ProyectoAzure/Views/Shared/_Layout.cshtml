<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankRoberts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/ProyectoAzure.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background: rgba(0, 123, 255, 0.9);
            transition: background 0.3s;
        }
        .sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            background: #1e1e2d;
            padding-top: 60px;
        }
        .sidebar a {
            padding: 10px 20px;
            display: block;
            color: white;
            text-decoration: none;
        }
        .sidebar a:hover {
            background: #343a40;
        }
        .content {
            margin-left: 260px;
            padding: 20px;
        }
        footer {
            background: #f8f9fa;
            padding: 15px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-bank2 me-2"></i> BankRoberts
            </a>
        </div>
    </nav>

    <div class="sidebar">
        <ul class="list-unstyled">
            <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-house me-2"></i>Inicio</a></li>
            <li><a asp-controller="Transaccions" asp-action="Index"><i class="bi bi-credit-card me-2"></i>Transacciones</a></li>
            <li><a asp-controller="Transaccions" asp-action="Notificaciones"><i class="bi bi-bell me-2"></i>Notificaciones</a></li>
        </ul>
    </div>


    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - BankRoberts - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
